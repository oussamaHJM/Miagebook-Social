<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Simple Servlet + REST Application</display-name>

    <servlet>
        <servlet-name>ControllerUserServlet</servlet-name>
        <servlet-class>web.ControllerUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControllerUserServlet</servlet-name>
        <url-pattern>/profile</url-pattern>
        <url-pattern>/listUsers</url-pattern>
        <url-pattern>/addStatus</url-pattern>
        <url-pattern>/feed</url-pattern>
        <url-pattern>/addComment</url-pattern>
        <url-pattern>/allComments</url-pattern>
        <url-pattern>/recentStatus</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginControllerServlet</servlet-name>
        <servlet-class>web.LoginControllerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginControllerServlet</servlet-name>
        <url-pattern>/login</url-pattern>
        <url-pattern>/subscribe</url-pattern>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
</web-app>
